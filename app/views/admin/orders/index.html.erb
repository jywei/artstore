<h2>Order List</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>#</th>
      <th>Generate Time</th>
      <th>Purchaser</th>
      <th>Order Status</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td> <%= link_to(order.id, admin_order_path(order) ) %> </td>
      <td> <%= order.created_at.to_s(:long) %> </td>
      <td> <%= order.user.email %> </td>
      <td> <%= render_order_state(order) %> </td>
    </tr>
    <% end %>

  </tbody>
</table>
